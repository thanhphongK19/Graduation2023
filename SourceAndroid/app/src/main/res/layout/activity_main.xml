<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#EDEFED">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/connect"
            android:layout_width="158dp"
            android:layout_height="68dp"
            android:text="Kết nối"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/rectange_7"/>

        <TextView
            android:id="@+id/function"
            android:layout_width="158dp"
            android:layout_height="68dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectange_7"
            android:text="Tính năng"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="40dp"

            android:text="Trạng thái kết nối"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="342dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rectange_7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Gateway"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/statusGateway"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:textSize="17dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="342dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rectange_7"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Node Control"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/statusNodeControl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="342dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rectange_7"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Node Sensor 1"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/statusNodeSenSor1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="342dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rectange_7"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Node Sensor 2"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/statusNodeSenSor2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"/>


        </LinearLayout>

    </LinearLayout>
<!--    <RelativeLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:background="@drawable/frame_598">-->
<!--        -->
<!--    </RelativeLayout>-->


</LinearLayout>